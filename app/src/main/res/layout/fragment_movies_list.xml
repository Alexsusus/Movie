<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_movies_list">

    <ImageView
        android:id="@+id/icon_movies_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_near_movies_list"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/movies_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies_list_tittle"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/icon_movies_list"
        app:layout_constraintTop_toTopOf="@+id/icon_movies_list"
        app:layout_constraintBottom_toBottomOf="@+id/icon_movies_list"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/movies_list_title"
        app:layout_constraintStart_toStartOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_in_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_item_movies"
            >

            <ImageView
                android:id="@+id/movies_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list"
                android:contentDescription="@string/description_bgc_item_list"
                tools:layout_editor_absoluteX="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/movie_title_list"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/white_H1_H6"
                app:layout_constraintEnd_toEndOf="@+id/movies_item"
                app:layout_constraintStart_toStartOf="@+id/movies_item"
                app:layout_constraintTop_toBottomOf="@id/movies_item"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_duration"
                android:textColor="@color/color_movie_duration"
                android:textSize="8sp"
                app:layout_constraintTop_toBottomOf="@id/movie_title"
                app:layout_constraintStart_toStartOf="@id/movie_title"
                tools:ignore="SmallSp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>