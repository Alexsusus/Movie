<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".MovieDetailsActivity">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/age_limit_13"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/avengers_H1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/avengers_H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="222dp"
            android:text="@string/movie_title_details"
            android:textColor="@color/white_H1_H6"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/genre"
            android:textColor="@color/pink_genre"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avengers_H1" />

        <ImageView
            android:id="@+id/first_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star_icon_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genre"
            app:layout_constraintEnd_toStartOf="@id/second_star"
            android:contentDescription="@string/description_first_star" />

        <ImageView
            android:id="@+id/second_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_icon_pink"
            android:layout_marginEnd="3dp"
            app:layout_constraintStart_toEndOf="@id/first_star"
            app:layout_constraintTop_toTopOf="@id/first_star"
            app:layout_constraintEnd_toStartOf="@id/third_star"
            android:contentDescription="@string/description_second_star" />

        <ImageView
            android:id="@+id/third_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star_icon_pink"
            app:layout_constraintStart_toEndOf="@id/second_star"
            app:layout_constraintTop_toTopOf="@+id/second_star"
            app:layout_constraintEnd_toStartOf="@id/fourth_star"
            android:contentDescription="@string/description_third_star" />

        <ImageView
            android:id="@+id/fourth_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_icon_pink"
            app:layout_constraintStart_toEndOf="@id/third_star"
            app:layout_constraintTop_toTopOf="@id/third_star"
            app:layout_constraintEnd_toStartOf="@id/fifth_star"
            android:contentDescription="@string/description_fourth_star" />

        <ImageView
            android:id="@+id/fifth_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_icon_grey"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/fourth_star"
            app:layout_constraintTop_toTopOf="@id/fourth_star"
            android:contentDescription="@string/description_fifth_star" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/reviews"
            android:textColor="@color/reviews_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/fifth_star"
            app:layout_constraintTop_toBottomOf="@id/genre" />


        <TextView
            android:id="@+id/storyline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/storyline"
            android:textColor="@color/white_H1_H6"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_star" />

        <TextView
            android:id="@+id/text_storyline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_storyline"
            android:textColor="@color/white_text_storyline"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storyline" />


        <TextView
            android:id="@+id/cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/cast"
            android:textColor="@color/white_H1_H6"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_storyline" />

        <ImageView
            android:id="@+id/first_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pic_robert"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_pic"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            android:contentDescription="@string/description_first_pic"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="first_pic" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="first_pic" />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/nameRobertDJ"
            android:textColor="@color/white_names_actors_under_pic"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barrier1_left"
            app:layout_constraintTop_toBottomOf="@+id/first_pic"
            app:layout_constraintEnd_toStartOf="@id/barrier1_right"/>


        <ImageView
            android:id="@+id/second_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pic_chris_evans"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@id/third_pic"
            app:layout_constraintStart_toEndOf="@+id/first_pic"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            android:contentDescription="@string/description_second_pic"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="second_pic" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="second_pic" />

        <TextView
            android:id="@+id/second_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/nameChrisE"
            android:textColor="@color/white_names_actors_under_pic"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barrier2_left"
            app:layout_constraintTop_toBottomOf="@+id/second_pic"
            app:layout_constraintEnd_toEndOf="@id/barrier2_right"
            />


        <ImageView
            android:id="@+id/third_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pic_mark"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@id/fourth_pic"
            app:layout_constraintStart_toEndOf="@+id/second_pic"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            android:contentDescription="@string/description_third_pic"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier3_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="third_pic" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="third_pic" />

        <TextView
            android:id="@+id/third_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/nameMarkR"
            android:textColor="@color/white_names_actors_under_pic"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barrier3_left"
            app:layout_constraintTop_toBottomOf="@+id/third_pic"
            app:layout_constraintEnd_toEndOf="@id/barrier3_right"
            />

        <ImageView
            android:id="@+id/fourth_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/pic_chris_h"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/third_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cast"
            android:contentDescription="@string/description_fourth_pic"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier4_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="fourth_pic" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier4_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="fourth_pic" />

        <TextView
            android:id="@+id/fourth_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/nameChrisH"
            android:textColor="@color/white_names_actors_under_pic"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barrier4_left"
            app:layout_constraintTop_toBottomOf="@+id/fourth_pic"
            app:layout_constraintEnd_toEndOf="@id/barrier4_right"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>